{
  "name": "demo-wallet-server",
  "main": "dist/index.js",
  "version": "2.0.0",
  "type": "module",
  "description": "Stellar Rozo Demo Wallet server",
  "repository": {
    "type": "git",
    "url": "https://github.com/stellar/stellar-demo-wallet.git",
    "directory": "packages/demo-wallet-server"
  },
  "license": "Apache-2.0",
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "scripts": {
    "clean": "rimraf ./build",
    "dev": "ts-node ./src/index.ts",
    "start": "node ./build/index.js",
    "build": "tsc && yarn copy-static-files",
    "copy-static-files": "mkdir -p ./build/src/static/well-known/ && cp ./src/static/well_known/* ./build/src/static/well-known/"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1"
  }
}
